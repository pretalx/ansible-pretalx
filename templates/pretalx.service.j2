[Unit]
Description=pretalx %I server application
Requires=pretalx@%i.socket
After=network.target

[Service]
User=%u
Group=%u
WorkingDirectory=/home/%u/.local/lib/python{{ pretalx_system_python_version }}/site-packages/pretalx
ExecStart=/home/%u/.local/bin/gunicorn --bind unix:/run/gunicorn/pretalx_%i --workers 4  --max-requests 1200  --max-requests-jitter 50 pretalx.wsgi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID